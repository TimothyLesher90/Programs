//Write a program named FahrenheitToCelsius that accepts a temperature in Fahrenheit from a user and converts it to Celsius by subtracting 32 from the Fahrenheit value and multiplying the result by 5/9.//


using System;
using static System.Console;
class FahrenheitToCelsius
{
    static void Main()
    {
        WriteLine("Enter Fahrenheit Temperture: ");
        double FahrenheitTemperture = double.Parse(ReadLine());
        double celsius = (5.0 / 9.0) * (FahrenheitTemperture - 32);
        WriteLine("{0:0.0} F is {1:0.0} C", FahrenheitTemperture, celsius); ;
    }
}
