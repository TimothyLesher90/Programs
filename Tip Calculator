        private void button1_Click(object sender, EventArgs e)
        {
            //Tip calculator//

            decimal Total; //The amount the meal cost//
            decimal Low; //fifteen percent of meal cost//
            decimal Mid; //eighteen percent of meal cost//
            decimal High; //twenty percent of meal cost//

            const decimal Low_Tip = .15M; //Fifteen percent tip//
            const decimal Mid_Tip = .18M; //Eighteen percent tip//
            const decimal High_Tip = .20M; //Twenty percent tip //


            Total = decimal.Parse(Total_Before_Tip.Text); //text box for total before tip//

            Low = Total * Low_Tip;
            Mid = Total * Mid_Tip;
            High = Total * High_Tip;

            Low_Rate_Output.Text = $"{Low:C}";
            Mid_Rate_Output.Text = $"{Mid:C}";
            High_Rate_Ouput.Text = $"{High:C}";

            //Tip calculator//
        }
    }
